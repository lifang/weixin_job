<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>用户注册</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body style="background: #373F42;">
    <% if flash[:notice] %>
      <div id="flash_field" style="width:100%;position: fixed; z-index: 4;">
        <div style="font-size:20px;margin: 200px auto;width: 300px;background: #373f42;;padding: 20px;">
          <span class="close" id="close_flash" style="float:right;" ></span>
          <div class="alert_h"><%=  flash[:notice]%></div>
        </div>
      </div>
    <% end %>
    <%= form_tag logins_path(@company), :method => :post do %>
      <div class="loginBox">
        <h1>微招聘注册</h1>
        <div class="loginForm">
          <p>
            <label>公司名称</label>
            <input type="text" name="comp_name" id="regist_comp_name"/>
          </p>
          <p>
            <label>用户名</label>
            <input type="text" name="comp_account" id="regist_comp_account"/>
          </p>
          <p>
            <label>密码</label>
            <input type="password" name="comp_password" id="regist_comp_password"/>
          </p>
          <p>
            <button class="loginBtn orangeBtn"  type="button" onclick="regist_valid(this)" style="margin-left:90px;">注册</button>
            <a class="register" href="/">返回登陆</a>
          </p>
        </div>
      </div>
    <% end %>
  </body>
</html>
