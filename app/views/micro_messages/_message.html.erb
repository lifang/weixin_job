<% if_edit ||= false %>
<% if micro_imgtexts.present? %>
  <% micro_imgtexts.each_with_index do |micro_imgtext, index|%>
    <% if index == 0 %>
      <div class="img">
        <img src="<%= micro_imgtext.img_path %>" />
        <p><%= micro_imgtext.content %></p>
      </div>
    <% else %>
      <div class="img2">
        <img src="<%= micro_imgtext.img_path %>" />
        <p><%= micro_imgtext.title %></p>
        <p><%= micro_imgtext.content %></p>
      </div>
    <% end %>
  <% end %>
  <% if if_edit %>
    <div class="aFunc" style="padding-left: 10px;">
      <a href="<%= edit_company_micro_message_path(@company,micro_message_id) %>" class="edit_icon tooltip_html">编辑</a>
      <a href="<%= company_micro_message_path(@company,micro_message_id) %>" data-method="delete" data-confirm="确定删除消息吗？" class="delete_icon tooltip_html">删除</a>
    </div>
  <% end %>
<% end %>