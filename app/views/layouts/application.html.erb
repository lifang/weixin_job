<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8"/>
    <title>微招聘-<%= @title %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |name, msg| %>
      <div id="flash_field" style="width:100%;position: fixed; z-index: 4;">
        <div style="font-size:20px;margin: 200px auto;width: 300px;background: #373f42;;padding: 20px;">
          <span class="close" id="close_flash" style="float:right;" ></span>
          <div class="alert_h" style="color:white;"><%=msg%></div>
        </div>
      </div>
    <% end %>
    <div class="header">
      <div class="logo">微招聘</div>
      <div class="userInfo">
        <span><%= cookies[:company_account] %></span>
        <ul>
          <li>1</li>
          <li>1</li>
        </ul>
      </div>
    </div>
    <div class="main">
      <div class="leftMenu">
        <ul>

          <!--**********************************************************************-->
          <li class="leftMenuItem <%=is_hover_top?(controller.controller_name) == 1 ? "hover":""%>">简历
            <ul>
              <%= link_to newest_resumes_company_resumes_path(@company) do %>
                <li class="leftMenuItem_2 <%= @status == DeliveryResumeRecord::STATUS[:newest] ? "hover" : ""%>">最新简历</li>
              <% end %>
              <%= link_to audition_resume_company_resumes_path(@company) do %>
                <li class="leftMenuItem_2 <%= @status == DeliveryResumeRecord::STATUS[:audition] ? "hover" : ""%>">面试简历</li>
              <% end %>
              <%= link_to  pass_resume_company_resumes_path(@company) do %>
                <li class="leftMenuItem_2 <%= @status == DeliveryResumeRecord::STATUS[:pass] ? "hover" : ""%>">入职简历</li>
              <% end %>
              <%= link_to refuse_resume_company_resumes_path(@company) do %>
                <li class="leftMenuItem_2 <%= @status == DeliveryResumeRecord::STATUS[:refuse] ? "hover" : ""%>">已拒绝简历</li>
              <% end %>
              <%= link_to company_resumes_path(@company) do %>
                <li class="leftMenuItem_2 <%= is_hover?("resumes") if controller.action_name == 'index'%>">简历模板</li>
              <% end %>
              <%= link_to company_exports_path(@company) do %>
                <li class="leftMenuItem_2 <%= is_hover?("exports")%>">下载简历</li>
              <%end%>
            </ul>
          </li>
          <li class="leftMenuItem <%=is_hover_top?(controller.controller_name) == 2 ? "hover":""%>">职位
            <ul>
              <%=link_to company_positions_path(@company) do%>
                <li class="leftMenuItem_2 <%= is_hover?("positions")%>">当前职位</li>
              <%end%>
              <li class="leftMenuItem_2">历史职位</li>
            </ul>
          </li>
          <li class="leftMenuItem <%=is_hover_top?(controller.controller_name) == 3 ? "hover":""%>">设置
            <ul>
              <%= link_to "/companies/show?company_id=#{@company.id}" do %>
                <li class="leftMenuItem_2 <%= is_hover?("companies/show") %>">设置</li>
              <% end %>
              <%=link_to company_company_profiles_path(@company) do%>
                <li class="leftMenuItem_2 <%= is_hover?("company_profiles")%>">公司简介</li>
              <%end%>
              <%=link_to company_position_types_path(@company) do%>
                <li class="leftMenuItem_2 <%= is_hover?("position_types") %>">职位类别</li>
              <%end%>
              <%= link_to company_address_settings_path(@company) do %>
                <li class="leftMenuItem_2 <%= is_hover?("address_settings")%>">工作地点管理</li>
              <% end %>
              <%= link_to company_menus_path(@company) do %>
                <li class="leftMenuItem_2 <%= is_hover?("menus")%>">菜单</li>
              <% end %>
              <%= link_to company_app_managements_path(@company) do %>
                <li class="leftMenuItem_2 <%= is_hover?("app_managements")%>">APP管理</li>
              <% end %>
            </ul>
          </li>
          <a href="/logins/sign_out">
            <li class="leftMenuItem">注销</li>
          </a>

        </ul>
      </div>
      <%= yield %>
    </div>
    <%= render "/shared/tishi_alert" %>
  </body>
</html>
