<script src="/assets/My97DatePicker/WdatePicker.js" >
</script>
<div class="main_con2">
  <div class="toolbar">
    <div class="searchBox2">
      <%=render 'choice_part', status:@status %>
    </div>
  </div>
  <%if @positions_and_resumes.blank?%>
    <div style="text-align:center; font-size: 14px;margin-top: 50px;"> 暂无数据
    </div>
  <%else%>
    <table class="table1">
      <tr>
        <th>职位</th>
        <th>姓名</th>
        <th>手机号码</th>
        <th>投递时间</th>
        <th>附件</th>
        <th>操作</th>
      </tr>
      <%@positions_and_resumes.each do |p_and_r|%>
        <tr>
          <td><%=p_and_r.name%></td>
          <td><%=p_and_r.html_content_datas.class%></td>
          <td><%=p_and_r.html_content_datas['联系电话']%></td>
          <td><%=p_and_r.created_at%></td>
          <td><%=p_and_r.html_content_datas['附件']%></td>
          <td>
            <button class="show" title="查看" ></button>
            <button class="refuse" title="拒绝" onclick="change_status(<%=@company.id%>,<%=p_and_r.id%>,1)" ></button>
            <button class="toInterview scd_btn" onclick="deal_audition(<%=@company.id%>,<%=p_and_r.id%>)" name="InterviewInfo" title="安排面试"></button>
          </td>
        </tr>
      <%end%>
    </table>
  <%end%>
</div>

<div class="second_bg"></div>
<div class="second_box second_box_fixed InterviewInfo">
  <div class="second_content" style="width: 450px;">
    <span class="close" title="关闭">×</span>
    <h1>安排面试</h1>
    <form  id ="audition_form">
      <div>
        <p>
          <label>时间</label>
          <input name="audition_time" type="text" readonly onclick="WdatePicker({dateFmt:'yyyy-MM-dd',autoPickDate:true})"/>
        </p>
        <p>
          <label>地址</label>
          <input name="audition_addr" type="text" />
        </p>
        <p style="overflow: hidden; height: auto; margin-top: 3px;">
          <label style="float: left;">备注</label>
          <textarea name="remark" style=" margin-left: 14px; resize: none; width: 250px; padding: 3px;"></textarea>
        </p>
      </div>
      <div class="scdBoxAct">
        <button class="orangeBtn" onclick="submit_audition_form(this)">确定</button>
        <button type="button" class="orangeBtn">取消</button>
      </div>
    </form>
  </div>
</div>