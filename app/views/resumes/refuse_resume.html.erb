<script src="/assets/My97DatePicker/WdatePicker.js" >
</script>
<script type="text/javascript">
  $(function(){
    $('.cr_input').hcheckbox();
  })
</script>
<div class="area">
  <div class="title clearAfter">
    <h1>已拒绝面试</h1>
    <div class="seek">
      <%=render 'choice_part', status:@status %>
    </div>
  </div>
  <div class="content">
    <div class="manage">
      <div class="manage_head">
       <%=render 'ul_manage'%>
      </div>
      <div class="manage_body">
        <div>
          <table width="100%" border="0" cellspacing="0" cellpadding="0" class="b_table">
            <thead>
              <tr>
                <th>投递职位</th>
                <th>应聘人员姓名</th>
                <th>手机号码 </th>
                <th>附件</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <%@positions_and_resumes.each do |p_and_r|%>
                <tr>
                  <td><%=p_and_r.position_name%></td>
                  <td><%=p_and_r.clint_name%></td>
                  <td><%=p_and_r.client_phone%></td>
                  <td><a href="<%=(is_have_file? p_and_r.html_content_datas)=="" ? "javascript:javascript:tishi_alert('暂无附件！')":"/down_load_file?file_path=#{(is_have_file? p_and_r.html_content_datas)}" %>" target="_blank">下载附件</a></td>
                  <td><div class="aFunc">
                       <a href="/companies/<%=@company.id%>/resumes/<%=p_and_r.id%>/show_resumes_new?" class="preview_icon tooltip_html" data-remote="true">预览</a>
                      <%=link_to company_resume_path(@company,p_and_r.id),method:'delete',class:"delete_icon",confirm:"是否确定删除？" do%>
                        删除
                      <%end%>
                    </div></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div style="margin-top: 19px;" class="digg_pagination">
    <%=will_paginate @positions_and_resumes,:previous_label=>'上一页',:next_label=>'下一页',style:"width:75%"%>
  </div>
</div>

<div class="second_bg"></div>
<%=render 'refuse_tab'%>
<div class="tab show_resume" style="display:none;">
</div>

