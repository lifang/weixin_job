<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    

    <title>微招聘-设置</title>
    <script>
      $(function(){

      })
    </script>

  </head>

  <body>
    <div class="header">
      <div class="logo">微招聘</div>
      <div class="userInfo">
        <span>user</span>
        <ul>
          <li>1</li>
          <li>1</li>
        </ul>
      </div>
    </div>

    <div class="main">
      <div class="leftMenu">
        <ul>
          <li class="leftMenuItem hover">设置</li>
          <li class="leftMenuItem">招聘职位</li>
          <li class="leftMenuItem">简历模板</li>
          <li class="leftMenuItem">公司简介</li>
          <li class="leftMenuItem">菜单</li>
          <li class="leftMenuItem">导出简历</li>
        </ul>
      </div>
      <div class="main_box">
        <div class="main_con">
          <div class="companyInfo">
            <li>
              <label>公司名称</label>
              <span>fdgss</span>
              <a class="scd_btn" name="companyInfoEdit">编辑</a>
            </li>
            <li>
              <label>微信公众账号</label>
              <span>egw</span>
            </li>
            <li class="yes">
              <label>是否配置APP</label>
              <span>是</span>
              <a class="scd_btn" name="appInfoEdit">修改</a>
              <div class="appInfo">
                <span class="angle">▲</span>
                <ul>
                  <li>
                    <label>APP账号</label>
                    <span>egw</span>
                  </li>
                  <li>
                    <label>APP密码</label>
                    <span>egw</span>
                  </li>
                </ul>
              </div>
            </li>
          </div>
          <div>
            <img src="/assets/process.png" />
          </div>
        </div>
      </div>
    </div>

    <div class="second_bg"></div>
    <div class="second_box second_box_fixed companyInfoEdit">
      <div class="second_content" style="width: 450px;">
        <span class="close" title="关闭">×</span>
        <h1>公司信息编辑</h1>
        <div>
          <p>
            <label>公司名称</label>
            <input type="text" />
          </p>
          <p>
            <label>微信公众账号</label>
            <input type="text" />
          </p>
          <p>
            <label>是否配置APP</label>
            <input type="text" />
          </p>
        </div>
        <div class="scdBoxAct">
          <button class="orangeBtn">确定</button>
          <button class="orangeBtn">取消</button>
        </div>

      </div>
    </div>
    <div class="second_box second_box_fixed appInfoEdit">
      <div class="second_content" style="width: 450px;">
        <span class="close" title="关闭">×</span>
        <h1>APP信息修改</h1>
        <div>
          <p>
            <label>APP账号</label>
            <input type="text" />
          </p>
          <p>
            <label>APP密码</label>
            <input type="text" />
          </p>
        </div>
        <div class="scdBoxAct">
          <button class="orangeBtn">确定</button>
          <button class="orangeBtn">取消</button>
        </div>
      </div>
    </div>
  </body>
</html>
